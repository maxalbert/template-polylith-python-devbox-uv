{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.6/.schema/devbox.schema.json",
  "packages": [
    "python@latest",
    "uv@latest",
    "treefmt@latest",
  ],
  "shell": {
    "init_hook": [
      ". $VENV_DIR/bin/activate",
      "export UV_PYTHON=$VENV_DIR/bin/python",
      "uv sync",
      "pre-commit install",
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1",
      ]
    }
  }
}
